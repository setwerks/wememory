{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@wememory/lib": ["../../packages/lib/src"],
      "@wememory/types": ["../../packages/types/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
} 